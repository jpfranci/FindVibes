{
  "functions": {
    "predeploy": [
    ]
  },
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/login",
        "function": "widgets"
      },
      {
        "source": "/public/**",
        "destination": "/public.html"
      },
      {
        "source": "/callback",
        "function": "widgets"
      },
      {
        "source": "/callback/",
        "function": "widgets"
      },
      {
        "source": "**",
        "destination": "index.html",
        "function": "widgets"
      }
    ]
  }
}
